@model TP_PWEB.ViewModels.UserManagerViewModel
@{
    ViewData["Title"] = "Gestão de Utilizadores";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h3 class="m-1"><b>@ViewBag.UserName</b></h3>
        </div>

        <div class="card-body">
            <h5>Nome</h5>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input style="width: 20em !important" asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input style="width: 20em !important" asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="card-body">
            <h5>Ativo</h5>
            <div class="form-check m-1">
                <label class="form-check-label" asp-for="@Model.Active">Utilizador Ativo?</label>
                <input asp-for="@Model.Active" class="form-check-input" />
            </div>
        </div>

        <div class="card-body">
            <h5>Cargos</h5>
            @for (int i = 0; i < Model.ListRoles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.ListRoles[i].RoleId" />
                    <input type="hidden" asp-for="@Model.ListRoles[i].RoleName" />
                    <input asp-for="@Model.ListRoles[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.ListRoles[i].Selected">
                        @Model.ListRoles[i].RoleName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Confirmar" class="btn btn-primary" style="width:auto" />
            <a asp-action="Index" class="btn btn-primary" style="width:auto">Cancelar</a>
        </div>
    </div>
</form>