@model IEnumerable<TP_PWEB.Models.VehicleCategory>

@{
    ViewData["Title"] = "Gestão de Categorias";
}

<h2>Gestão de Categorias de Veiculos</h2>

<div class="row mt-3">
	<div class="col-md-4">
		<form method="post" asp-action="AddCategoria" asp-controller="VehicleCategories">
			<div class="input-group">
                <input style="margin-inline-end: .5em" name="categoryName" class="form-control">
				<span class="input-group-btn">
					<button class="btn btn-primary">Adicionar Categoria</button>
				</span>
			</div>
		</form>
	</div>
</div>

<table style="vertical-align: middle" class="table table-striped table-hover table-bordered mt-3">
    <caption style="caption-side:top">Lista de Categorias</caption>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th style="text-align:center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="text-align:center">
                    <a style="margin-inline-end: .5em" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
