@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button class="btn btn-outline-light ms-2 me-2" type="submit">Logout</button>
        </form>
    </li>
}
else
{
        <li class="nav-item">
            <a class="btn btn-warning" asp-area="Identity" asp-page="/Account/Register">REGISTO</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-light ms-2 me-2" asp-area="Identity" asp-page="/Account/Login">ENTRAR</a>
        </li>
}
</ul>
