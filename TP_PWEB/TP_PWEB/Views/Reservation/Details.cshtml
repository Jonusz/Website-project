@model TP_PWEB.Models.Reservation

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes da Reserva</h2>

@if (Model.ReservationState == -1) //unaccepted
{
    <h4>Reserva rejeitada</h4>

    <div class="card mb-3">
        <div class="card-header">
            <h4 class="m-1">Reserva de <b>@Model.Vehicle.Brand @Model.Vehicle.Model</b></h4>
        </div>

        <div class="card-body">
            <h5>Cliente</h5>
            @Model.Client.FirstName @Model.Client.LastName
            <br />
            @Model.Client.Email
        </div>

        <div class="card-body">
            <h5>Detalhes</h5>
            Categoria: @Model.Vehicle.Category.Name
            <br />
            @Model.Vehicle.Seats Seats
            <br />
            @Model.Vehicle.Kms kilometers
        </div>

        <div class="card-body">
            <h5>Localização</h5>
            @Model.Vehicle.Location
        </div>

        <div class="card-body">
            <h5>Preço</h5>
            <h6>@Model.Price €</h6>
        </div>

        <div class="card-body">
            <h5>Data de Levantamento</h5>
            @Model.PickUpDate
        </div>

        <div class="card-body">
            <h5>Data de Entrega</h5>
            @Model.DeliveryDate
        </div>

        <div class="card-footer">
            <a asp-action="Index" class="btn btn-primary" style="width:auto">Voltar</a>
        </div>
    </div>
}
